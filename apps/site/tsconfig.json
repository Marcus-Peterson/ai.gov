{
  "extends": "../../packages/typescript-config/base.json", // Extend the shared monorepo config
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "src/astro-env.d.ts",
    ".astro/types.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
